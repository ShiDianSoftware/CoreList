<view class='all width_100 height_100 display_flex flex_column'>

  <scroll-view id="list1" bindscroll="scrollAction" scroll-top="{{list1_top}}" scroll-y class='width_100 height_100' lower-threshold="50" enable-back-to-top="{{true}}" bindscrolltolower="loadMore">

    <view data-index="{{index}}" class='item' wx:for="{{list1}}">
      <view class='real_item' wx:if="{{item != null}}">
        {{index}}-{{item.title}}
      </view>
      
    </view>

    <view class='footer_view' wx:if="{{list1.length>0}}">
        <text>{{list1_str}}</text>
    </view>

  </scroll-view>


</view>